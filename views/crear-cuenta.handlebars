<main class="contenedor">
        <form action="/crear-cuenta" method="post" class="default-form">
            <div class="campo">
                <label>Nombre</label>
                <input type="text" name="nombre" placeholder="Tu nombre">
            </div>
            <div class="campo">
                <label>Correo</label>
                <input type="email" name="email" placeholder="Tu Correo">
            </div>
            <div class="campo">
                <label>Contraseña</label>
                <input type="password" name="password" placeholder="Tu nombre">
            </div>
            <div class="campo">
                <label>Repite tu Contraseña</label>
                <input type="password" name="confirmar" placeholder="Repetir Password">
            </div>
            <div class="campo acciones">
                <a href="/iniciar-sesion">Volver a Iniciar Sesion</a>
            </div>

            <div class="campo">
                <input type="submit" value="Crear Cuenta" class="btn btn-azul">
            </div>
        </form>

</main>