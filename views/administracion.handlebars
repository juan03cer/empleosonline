<main class="lista-vacantes">
        <h2>Navegacion</h2>
         <div class="botones separador">
            <a href="/editar-perfil" class="btn btn-azul">Editar Perfil</a>
            <a href="/vacantes/nueva" class="btn btn-verde">Nuevo Empleo</a>
         </div>

         <h2>Tus Empleos</h2>
            <div class="panel-administracion">

                {{#if vacantes.length}}
                    {{#each vacantes}}
                        <div class="vacante">
                            <div class="caja">
                                <h3>{{empresa}}</h3>
                                <p class="puesto">{{titulo}}</p>
                                <p class="candidatos">{{candidatos.length}} Postulados(s)</p>
                            </div>
                            <div class="centrar-vertical caja">
                                <a href="/candidatos/{{_id}}" class="btn btn-amarillo">Postulados al Empleo</a>
                            </div>
                            <div class="centrar-vertical caja">
                                <a href="/vacantes/editar/{{url}}" class="btn btn-verde">Editar</a>
                            </div>
                            <div class="centrar-vertical caja">
                             <a href="#" data-eliminar="{{_id}}" class="btn btn-rojo">Eliminar</a>
                            </div>
                        </div>
                    {{/each}}
                {{else}}
                    <p>No hay Empleos,crea uno</p>
                {{/if}}
            </div>
</main>